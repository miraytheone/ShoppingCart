@model IEnumerable<ShoppingCart.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row pb-4">
    @foreach(var item in @Model){
        <div class="card" style="width: 18rem;">
            <img class="cars-img-top" src="@item.ImageUrl" alt="Card Image Cap"/>
            <div class="card-body">
                <h5 class="card-title">@item.Price</h5>
                <p class="card-text">Price: @item.Price.ToString("0.00")</p>
                <a asp-action="Details" asp-controller="Home" asp-route-product="@item.Id" class="btn btn-primary">Details</a>
            </div>
        </div>
         
    }
</div>
